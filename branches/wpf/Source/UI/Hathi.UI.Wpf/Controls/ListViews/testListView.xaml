<UserControl x:Class="Hathi.UI.Wpf.Controls.ListViews.testListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="Auto" Width="Auto">
    <Grid>
        <Border Grid.Column="0" Margin="5,0,0,5">
            <ListView x:Name="listView1" Margin="0,5,0,0" Background="Transparent"
            ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"
            VirtualizingStackPanel.IsVirtualizing="True" ScrollViewer.CanContentScroll="True"
            SelectionMode="Single" BorderThickness="0" Width="Auto">
                <ListView.View>
                    <GridView AllowsColumnReorder="False">
                        <GridViewColumn Width="10" HeaderContainerStyle= "{DynamicResource FirstColumnHeader}"/>
                        <GridViewColumn Header="First Name" Width="Auto" HeaderContainerStyle= "{DynamicResource ColumnHeader}" />
                        <GridViewColumn Header="Last Name" Width="Auto" HeaderContainerStyle= "{DynamicResource ColumnHeader}"/>
                        <GridViewColumn Width="10" HeaderContainerStyle= "{DynamicResource LastColumnHeader}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
    </Grid>
    <UserControl.Resources>
     
    </UserControl.Resources>
</UserControl>
